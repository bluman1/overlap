---
import '@/styles/global.css';

type Props = {
  title: string;
  description?: string;
};

const { title, description = 'See where your team\'s heads are at' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#1a1a1a" />
    <title>{title} | Overlap</title>
  </head>
  <body>
    <slot />

    <footer style="
      border-top: 1px solid var(--border-subtle);
      padding: var(--space-lg) var(--space-xl);
      margin-top: auto;
      text-align: center;
    ">
      <a
        href="https://overlap.dev"
        target="_blank"
        rel="noopener noreferrer"
        style="
          display: inline-flex;
          align-items: center;
          gap: var(--space-sm);
          color: var(--text-muted);
          text-decoration: none;
          font-size: 0.875rem;
        "
      >
        <img src="/favicon-32x32.png" alt="Overlap" width="20" height="20" style="opacity: 0.7;" />
        <span>Overlap</span>
        <span style="color: var(--text-secondary);">â€” See where your team's heads are at</span>
      </a>
    </footer>
  </body>
</html>
